@page
@model siwp_app.Pages.Supply.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h4>Supply Order</h4>

<p>
    <a asp-page="Create">New Item</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Supply[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supply[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supply[0].Unit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supply[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supply[0].AdditionalInfo)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Supply) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdditionalInfo)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

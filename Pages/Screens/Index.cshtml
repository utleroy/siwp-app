@page 
@model siwp_app.Pages.Screens.IndexModel 
@{ 
    ViewData["Title"] = "Index"; 
    }

<form class="navbar-form">
    <input class="form-control" placeholder="Search" type="text" name="SearchString">
</form>

<hr>
<form class="navbar-form">
    <button class="btn btn-sm">
        <a asp-page="Create">Add New Screen</a>
    </button>
</form>

<hr>

<div class="table-responsive-sm">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Screens[0].ScreenName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Screens[0].ScreenLocation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Screens[0].Orientation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Screens[0].MeshCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Screens[0].Quanity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Screens[0].Notes)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Screens) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ScreenName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScreenLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Orientation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeshCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quanity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID"><i class="icon_pencil_alt"></i></a> |
                    <a asp-page="./Details" asp-route-id="@item.ID"><i class="icon_document_alt"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID"><i class="icon_close_alt"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    </div>

            